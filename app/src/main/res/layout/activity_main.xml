<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.chsweb.innovationacademy.jacksonbottom.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="NotSibling,UselessParent"
        android:layout_margin="10dp"
        android:layout_marginTop="29dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/top_layout"
            tools:ignore="ExtraText">

            <TextView
                android:text="@string/textview_welcome_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_displayentry"
                android:layout_weight=".5"
                android:gravity="center"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/HillsboroBlueHTML"
                android:textSize="30sp"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/progressBar1"
                android:layout_weight=".5"
                android:max="@android:integer/config_longAnimTime"
                android:visibility="visible"
                android:progress="@android:integer/config_longAnimTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/rules_list_view"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_launch_web_photos_intent"
                android:text="@string/button_launch_web_photos"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_launch_virtual_tour"
                android:text="@string/button_launch_virtual_tour_text"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
